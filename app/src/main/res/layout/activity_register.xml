<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/form_screen_background">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/registerActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".presentation.login.LoginActivity"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/registration"
                android:textColor="@color/primary"
                android:textSize="42sp"
                android:id="@+id/orderTotalPrice"
                app:layout_constraintBottom_toTopOf="@+id/registerEmailTextInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="80dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                android:id="@+id/registerEmailTextInput"
                app:layout_constraintTop_toBottomOf="@+id/orderTotalPrice"
                app:layout_constraintBottom_toTopOf="@+id/registerPasswordFrameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/registerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:hint="@string/e_mail"
                    android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
        <FrameLayout
                android:id="@+id/registerPasswordFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/registerEmailTextInput"
                app:layout_constraintBottom_toTopOf="@+id/passwordConfirmFrameLayout"
                app:layout_constraintStart_toStartOf="@+id/registerEmailTextInput"
                app:layout_constraintEnd_toEndOf="@+id/registerEmailTextInput"
                android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerPasswordTextInput"
                    android:theme="@style/TextInputLabel"
                    app:errorTextAppearance="@style/TextInputLabelErrorState"
                    app:errorEnabled="true">
                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/registerPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:hint="@string/password"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                    android:id="@+id/registerShowPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_show_password_white_24dp"/>
        </FrameLayout>
        <FrameLayout
                android:id="@+id/passwordConfirmFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/registerPasswordFrameLayout"
                app:layout_constraintBottom_toTopOf="@+id/buttonRegisterUser"
                app:layout_constraintStart_toStartOf="@+id/registerEmailTextInput"
                app:layout_constraintEnd_toEndOf="@+id/registerEmailTextInput"
                android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerConfirmPasswordTextInput"
                    android:theme="@style/TextInputLabel"
                    app:errorTextAppearance="@style/TextInputLabelErrorState"
                    app:errorEnabled="true">
                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/registerConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                    android:id="@+id/showConfirmPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_show_password_white_24dp"/>
        </FrameLayout>
        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/buttonRegisterUser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/Register"
                app:spinning_bar_color="@color/white"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"
                style="@style/ButtonPrimaryStyle"
                android:background="@drawable/login_button_drawable"
                android:foreground="?selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/passwordConfirmFrameLayout"
                app:layout_constraintStart_toStartOf="@+id/registerPasswordFrameLayout"
                app:layout_constraintEnd_toEndOf="@+id/registerPasswordFrameLayout"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent">
        </br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>