<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/orderLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/order_screen_background">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/orderActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="550.50 $"
            android:textColor="@color/white"
            android:textSize="46sp"
            android:id="@+id/orderTotalPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderActionBar"
            app:layout_constraintBottom_toTopOf="@id/orderFrameLayout"/>

    <FrameLayout
            android:id="@+id/orderFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.cardview.widget.CardView
                android:id="@+id/orderCardCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="32dp">
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameTextInput"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/lastNameTextInput"
                        app:layout_constraintStart_toStartOf="parent">
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/orderName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:textColor="@color/dark_gray"
                            android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lastNameTextInput"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintTop_toBottomOf="@+id/nameTextInput"
                        app:layout_constraintBottom_toTopOf="@id/cardNumberTextInput"
                        app:layout_constraintStart_toStartOf="parent">
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/orderLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/last_name"
                            android:textColor="@color/dark_gray"
                            android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintTop_toBottomOf="@+id/lastNameTextInput"
                        app:layout_constraintBottom_toTopOf="@id/cardMonthTextInput"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/cardNumberTextInput">
                    <mostafa.ma.saleh.gmail.com.editcredit.EditCredit
                            android:id="@+id/orderCardNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/card_number"
                            android:maxLength="20"
                            android:nextFocusDown="@id/orderCardMonth"
                            android:nextFocusForward="@id/orderCardMonth"
                            app:drawableGravity="end"
                            android:textColor="@color/dark_gray"
                            app:separator="spaces"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardNumberTextInput"
                        app:layout_constraintBottom_toTopOf="@id/orderButton"
                        android:id="@+id/cardMonthTextInput"
                        app:layout_constraintEnd_toStartOf="@+id/monthYearSeparator">
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/orderCardMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/month"
                            android:inputType="numberSigned"
                            android:imeOptions="actionNext"
                            android:textColor="@color/dark_gray"
                            android:nextFocusForward="@id/orderCardYear"
                            android:nextFocusRight="@id/orderCardYear"
                            android:maxLength="2"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/primary_dark"
                        android:layout_gravity="center"
                        android:text="@string/month_year_separator"
                        app:layout_constraintStart_toEndOf="@+id/cardMonthTextInput"
                        android:id="@+id/monthYearSeparator"
                        app:layout_constraintEnd_toStartOf="@+id/cardYearTextInput"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"/>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"
                        app:layout_constraintStart_toEndOf="@+id/monthYearSeparator"
                        android:id="@+id/cardYearTextInput"
                        android:nextFocusForward="@id/cardCvvTextInput"
                        app:layout_constraintEnd_toStartOf="@+id/cardCvvTextInput">
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/orderCardYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/year"
                            android:inputType="numberSigned"
                            android:imeOptions="actionNext"
                            android:textColor="@color/dark_gray"
                            android:nextFocusForward="@id/orderCardCvv"
                            android:nextFocusRight="@id/orderCardCvv"
                            android:maxLength="2"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/OrderTextInputLabel"
                        app:errorTextAppearance="@style/TextInputLabelErrorState"
                        app:errorEnabled="true"
                        app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"
                        app:layout_constraintStart_toEndOf="@+id/cardYearTextInput"
                        android:layout_marginStart="24dp"
                        android:id="@+id/cardCvvTextInput"
                        app:layout_constraintEnd_toEndOf="parent">
                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/orderCardCvv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cvv"
                            android:textColor="@color/dark_gray"
                            android:inputType="numberPassword"
                            android:maxLength="3"/>
                </com.google.android.material.textfield.TextInputLayout>
                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/orderButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/order"
                        app:spinning_bar_color="@color/white"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp"
                        style="@style/ButtonPrimaryStyle"
                        android:foreground="?selectableItemBackground"
                        android:background="@drawable/login_button_drawable"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardMonthTextInput"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp">
                </br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/primary_light"
                android:layout_gravity="bottom"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>