<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:id="@+id/titleErrorMainLayout"
            android:text="@string/tittle_error_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/descriptionErrorMainTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/description_error_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionErrorMainTextView"
            app:layout_constraintTop_toBottomOf="@+id/titleErrorMainLayout"
            app:layout_constraintBottom_toTopOf="@+id/tryAgainButton"
            app:layout_constraintStart_toStartOf="@+id/titleErrorMainLayout"
            app:layout_constraintEnd_toEndOf="@+id/titleErrorMainLayout" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/try_again_button"
            android:id="@+id/tryAgainButton"
            style="@style/ButtonPrimaryStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionErrorMainTextView"
            app:layout_constraintStart_toStartOf="@+id/titleErrorMainLayout"
            app:layout_constraintEnd_toEndOf="@+id/titleErrorMainLayout" android:layout_marginTop="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>