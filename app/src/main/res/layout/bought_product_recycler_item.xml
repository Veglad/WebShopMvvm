<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="@dimen/primary_corner_radius"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
        <TextView
                android:id="@+id/boughtProductTitle"
                tools:text="IPhone X"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textColor="@color/primary_dark"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:id="@+id/boughtProductImage"
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/boughtProductTitle"/>
        <TextView
                android:id="@+id/productPurchaseDate"
                tools:text="25.05.2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/boughtProductAmountTitle"
                android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:id="@+id/boughtPriceTitle"
                android:text="@string/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/boughtProductPrice"/>
        <TextView
                android:id="@+id/boughtProductPrice"
                tools:text="1099"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boughtProductImage"/>
        <TextView
                android:id="@+id/boughtProductAmountTitle"
                android:text="@string/products_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/boughtProductAmount"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/boughtProductAmount"
                tools:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boughtProductPrice"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>