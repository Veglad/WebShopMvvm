<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="@dimen/nav_main_header_height"
        android:background="@drawable/form_screen_background"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
            android:id="@+id/navHeaderUserImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/navMainHeaderEmail"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>
    <ProgressBar
            android:id="@+id/navHeaderImageProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/navHeaderUserImage"
            app:layout_constraintStart_toStartOf="@+id/navHeaderUserImage"
            app:layout_constraintBottom_toBottomOf="@+id/navHeaderUserImage"
            app:layout_constraintTop_toTopOf="@+id/navHeaderUserImage"
            android:visibility="gone"/>
    <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/nav_header_gradient_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view2"/>
    <TextView
            android:id="@+id/navMainHeaderEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="some@example.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>